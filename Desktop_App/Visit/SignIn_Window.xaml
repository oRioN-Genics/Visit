<Window x:Class="Visit.SignIn_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visit"
        mc:Ignorable="d"
        Title="SignIn_Window" Height="480" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="white">
        <!-- Main Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Left Panel -->
            <ColumnDefinition Width="*" />
            <!-- Right Panel -->
        </Grid.ColumnDefinitions>

        <Grid Background="Black" Grid.Column="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="VISIT" 
                           Foreground="White" 
                           FontSize="40" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20" 
                           TextAlignment="Center"/>
                <TextBlock Text="Explore the world effortlessly. Discover top destinations, find the perfect stays, and plan your dream trip in just a few clicks."
                           Foreground="White" 
                           FontSize="12" TextAlignment="Center" 
                           TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <!-- Right Panel -->
        <Grid Background="White" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Welcome Admin!"
                           FontSize="25" FontWeight="Bold" 
                           Margin="0,0,0,10" TextAlignment="Center"/>

                <TextBlock Text="Login to your account"
                           FontSize="15" FontWeight="Bold" 
                           Margin="0,0,0,10" TextAlignment="Center"/>

                <!-- Form -->
                <StackPanel Margin="0,20,0,0">
                    <!-- Username Field -->
                    <TextBlock Text="Username" 
                               FontSize="14" 
                               Margin="0,0,0,5" 
                               Foreground="#333" />

                    <TextBox Name="UsernameTextBox" 
                             Height="30" 
                             BorderBrush="#ccc" 
                             BorderThickness="1" 
                             Padding="5" 
                             Margin="0,0,0,15" />


                    <!-- Password Field -->
                    <TextBlock Text="Password" 
                               FontSize="14" 
                               Margin="0,0,0,5" 
                               Foreground="#333" />

                    <PasswordBox Name="PasswordBox"
                                 Height="30" 
                                 BorderBrush="#ccc" 
                                 BorderThickness="1" 
                                 Padding="5" 
                                 Margin="0,0,0,5" />


                    <!-- Login Button -->
                    <Button Content="Login" 
                            Height="40" 
                            Background="#6986f1" 
                            Foreground="White" 
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0" 
                            Cursor="Hand" 
                            Margin="0,20,0,0" 
                            Click="SignInButton_Click"
                            Name="SignInButton"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <ProgressBar Name="LoadingProgressBar" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             Width="200" 
             Height="10" 
             IsIndeterminate="True" 
             Visibility="Collapsed"/>
    </Grid>
</Window>
