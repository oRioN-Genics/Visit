<Window x:Class="Visit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Visit - Admin Panel" Height="600" Width="900" Background="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,10,0,0">
            <!-- Text Logo -->
            <Image Source="E:\Visit\Desktop_App\Assets\text_logo.png" 
                   Height="50" Width="80"
                   Margin="30,0,0,0" 
                   DockPanel.Dock="Left"/>
            <!-- Logo Icon -->
            <Image Source="E:\Visit\Desktop_App\Assets\logo.png" 
                   Height="40" Width="80" 
                   Margin="0,0,10,0" 
                   DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Height="313">
            <!-- Title -->
            <TextBlock Text="VISIT" 
                       FontSize="100" 
                       FontWeight="Bold" 
                       TextAlignment="Center"/>

            <TextBlock Text="Admin Panel: Manage and Review Users' Travel Plans" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#6986f1"
                       TextAlignment="Center"/>

            <!-- Button -->
            <Button Content="Get Started by Signing In →" Width="200" Height="40" 
                    Background="Black" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,50,0,0" 
                    Cursor="Hand"
                    Click="StartJourneyButton">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="20" 
                                            Padding="5" 
                                            BorderBrush="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
