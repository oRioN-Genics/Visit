<Window x:Class="Visit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Visit" Height="600" Width="900" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,10,0,0">
            <!-- Text Logo -->
            <Image Source="E:\Visit\Desktop_App\Assets\text_logo.png" 
                   Height="40" Width="80"
                   Margin="30,0,0,0" 
                   DockPanel.Dock="Left"/>
            <!-- Logo Icon -->
            <Image Source="E:\Visit\Desktop_App\Assets\logo.svg" 
                   Height="40" Width="80" 
                   Margin="0,0,10,0" 
                   DockPanel.Dock="Right"/>
        </DockPanel>

        <Frame x:Name="MainFrame" Grid.Row="1"/>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <!-- Title -->
            <TextBlock Text="Visit: Your Gateway to Unforgettable Destinations" 
                       FontSize="28" FontWeight="Bold" TextAlignment="Center"/>

            <!-- Subtitle -->
            <TextBlock Text="Plan with ease, book with confidence, and explore with joy—your next adventure starts here"
                       FontSize="14" Foreground="#5A5A5A" TextAlignment="Center" Margin="0,10,0,0"/>

            <!-- Button -->
            <Button Content="Start Your Journey →" Width="200" Height="40" 
                    Background="Black" Foreground="White" 
                    FontWeight="Bold" Margin="0,20,0,0" Cursor="Hand"
                    Click=" StartJourneyButton">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="20" 
                                            Padding="5" 
                                            BorderBrush="Transparent">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
